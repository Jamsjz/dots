
exec --no-startup-id setxkbmap -option caps:escape us
exec --no-startup-id /usr/lib/gsd-xsettings
exec --no-startup-id xset r rate 200 35
#################################### MY MODS ####################################
focus_follows_mouse yes
focus_wrapping no
for_window [class="^.*"] border pixel 1
title_align center
